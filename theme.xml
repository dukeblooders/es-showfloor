<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

	<feature supported="carousel">
	   <view name="system">
		  <carousel name="systemcarousel">
			<type>horizontal_wheel</type>
			<pos>0.0 0.7</pos>
			<size>1 0.25</size>
			<maxLogoCount>5</maxLogoCount>
			<logoRotationOrigin>0.5 -55</logoRotationOrigin>
			<logoRotation>-2.5</logoRotation>
			<logoScale>1.3</logoScale>
			<logoSize>0.15 0.15</logoSize>
			<color>00000000</color>
		  </carousel>

		  <text name="systemInfo">
			 <pos>-0.01 0.94</pos>
			 <color>FFFFFF</color>
			 <alignment>right</alignment>
			 <fontSize>0.03</fontSize>
			 <fontPath>./common/OpenSans-Bold.ttf</fontPath>
		  </text>
	   </view>
	</feature>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <textColor>777777</textColor>
         <iconColor>77777750</iconColor>
      </helpsystem>
   </view> 

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <pos>0.1875 0.175</pos>
         <size>0.45 0.675</size>
         <selectorColor>1C1C1C00</selectorColor>
         <selectedColor>E22828</selectedColor>
         <primaryColor>FFFFFF</primaryColor>
		 <secondaryColor>FFFFFF</secondaryColor>
         <fontSize>0.0215</fontSize>
		 <fontPath>./common/OpenSans-Bold.ttf</fontPath>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.125</pos>
         <maxSize>0.35 0.15</maxSize>
      </image>
      <image name="background">
         <path>./common/backgroundbasic.png</path>
      </image>
      <textlist name="gamelist">
         <pos>0.3 0.225</pos>
         <size>0.4 0.7</size>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="detailed,video">
     
      <image name="background">
         <path>./common/backgroundgame.png</path>
      </image>
	  <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_playcount, md_lastplayed">
         <pos>1 1</pos>
      </text>
      <text name="md_lbl_rating,md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount,md_lbl_players,md_developer, md_publisher, md_genre, md_playcount, md_lastplayed,md_description,md_players,md_releasedate">
         <color>FFFFFF</color>
         <fontSize>0.0195</fontSize>
		 <fontPath>./common/OpenSans-Bold.ttf</fontPath>
      </text>
	  
	  <image name="md_marquee">
		 <pos>0 0</pos> <!-- hidden -->
		 <maxSize>0 0</maxSize>
      </image>
	  
	  <image name="md_thumbnail">
		 <origin>0.5 0.5</origin>
         <pos>0.37 0.116</pos>
         <maxSize>0.68 0.15</maxSize>
      </image>
	  
	  <!-- Left -->
	  <text name="md_lbl_players">
         <pos>1 1</pos> <!-- hidden -->		 
      </text>
	  <text name="md_players">
         <pos>0.054 0.26</pos>
		 <size>0.1 0.025</size>
      </text>
	  <text name="md_genre">
         <pos>0.077 0.26</pos>
         <size>0.16 0.025</size>
		 <alignment>right</alignment>
      </text>
	  <text name="md_description">
         <pos>0.032 0.31</pos>
         <size>0.207 0.53</size>
         <color>FFFFFF</color>
      </text>
	  <text name="md_developer">
         <pos>0.032 0.865</pos>
         <size>0.207 0.025</size>
		 <alignment>center</alignment>
      </text>
	  
	  <!-- Middle -->
	  <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.58</pos>
         <maxSize>0.42 0.6</maxSize>
         <delay>2.00</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>

	  <!-- Right --> 	
	  <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.868 0.115</pos>
         <maxSize>0.2 0.2</maxSize>
      </image>  
	  <textlist name="gamelist">
         <pos>0.765 0.257</pos>
         <size>0.2 0.645</size>
         <alignment>left</alignment>
      </textlist> 
	  
